<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout

    android:layout_width="match_parent"
    android:id="@+id/parentSignUp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".View.SignUp.SignUpActivity">
    <ImageView
        android:layout_marginTop="30dp"
        android:layout_weight="2.5"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/mobilesignup"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="7.5"
        android:gravity="center"
        android:layout_height="0dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtPhoneNumberSignUp"
            android:textColorHint="@color/fbutton_color_asbestos"
            android:inputType="phone"
            android:hint="Số điện thoại"
            android:textColor="#01b0a9"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/edtUsernameSignUp"
            android:textColor="#01b0a9"
            android:textColorHint="@color/fbutton_color_asbestos"
            android:hint="Tên người dùng"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtPasswordSignUp"
            android:layout_marginTop="5dp"
            android:textColor="#01b0a9"
            android:textColorHint="@color/fbutton_color_asbestos"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtCheckPasswordSignUp"
            android:layout_marginTop="5dp"
            android:textColor="#01b0a9"
            android:textColorHint="@color/fbutton_color_asbestos"
            android:hint="Xác nhận mật khẩu"
            android:inputType="textPassword"
            />
        <EditText
            android:id = "@+id/edtEmailSignUp"
            android:hint = "Email"
            android:textColor="#01b0a9"
            android:textColorHint="@color/fbutton_color_asbestos"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignUpSignIn"
            android:textColor="@color/fbutton_color_asbestos"
            android:textColorHint="@color/fbutton_color_asbestos"
            android:text="Đăng ký"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>

</LinearLayout>
</ScrollView>
